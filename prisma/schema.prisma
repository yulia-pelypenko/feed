datasource db {
  provider = "mongodb"
  url      = env("MONGO_URI")
}  

generator client {
  provider  = "prisma-client-js"
  output    = "../src/generated/prisma/client"
}

model Feed {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  url       String    @unique
  title     String?
  createdAt DateTime  @default(now())
  items     FeedItem[] 
}

type FeedItem {
  title   String
  summary String?
  link    String
  image   String?
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
}

type Size {
  width  Int
  height Int
}

enum AdType {
  banner
  video
}

model LineItem {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  size      Size    
  minCpm    Float
  maxCpm    Float
  geo       String
  adType    AdType
  frequency Int
  creative  String
  createdAt DateTime @default(now())
}
