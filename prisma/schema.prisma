datasource db {
  provider = "mongodb"
  url      = env("MONGO_URI")
}  

generator client {
  provider      = "prisma-client-js"
  output        = "../src/generated/prisma/client"
}

model Feed {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  url       String    @unique
  title     String?
  createdAt DateTime  @default(now())
  items     FeedItem[] 
}

type FeedItem {
  title   String
  summary String?
  link    String
  image   String?
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}